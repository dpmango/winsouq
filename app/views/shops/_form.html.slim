= form_for @shop do |f|
  - if @shop.errors.any?
    #error_explanation
      h2 = "#{pluralize(@shop.errors.count, "error")} prohibited this shop from being saved:"
      ul
        - @shop.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone
    = f.text_field :phone, class: 'js-mask-phone'
  .field
    = f.label :phone_2
    = f.text_field :phone_2, class: 'js-mask-phone'
  .field
    = f.label :contacts
    = f.text_field :contacts
  .actions = f.submit
